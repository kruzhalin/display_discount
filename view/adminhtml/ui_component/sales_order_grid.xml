<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
     <columns name="sales_order_columns">
         <column name="coupon_code">
            <settings>
                <filter>text</filter>
                <visible>true</visible>
                <label translate="true">Coupon Code</label>
            </settings>
        </column>
         <column name="base_discount_amount" class="Magento\Sales\Ui\Component\Listing\Column\Price">
            <settings>
                <filter>textRange</filter>
                <visible>true</visible>
                <label translate="true">Discount Amount (Base)</label>
            </settings>
        </column>
         <column name="discount_amount" class="Magento\Sales\Ui\Component\Listing\Column\PurchasedPrice">
            <settings>
                <filter>textRange</filter>
                <visible>true</visible>
                <label translate="true">Discount Amount (Purchased)</label>
            </settings>
        </column>
     </columns>
</listing>
